<div class="ui centered cards">
  {{#each campus.building}}
    <div class="ui card">
      <div class="image">
        <img src="{{picture}}">
      </div>
      <div class="content">
        <a class="header">{{name}}</a>
      </div>
      <div class="extra content">
        <p>
        <b>Number of Rooms: {{roomamount}}<br>
        Phone Number: {{phone}}</b>
        </p>
        <a href="/building/{{../campus.id}}/build/{{id}}" class="ui icon button">
          <i class="icon folder open"></i>
        </a>
        <a href="/campus/{{../campus.id}}/deleteBuilding/{{id}}" class="ui icon button">
          <i class="icon trash deleteBuilding"></i>
        </a>
      </div>
    </div>
  {{/each}}
</div>