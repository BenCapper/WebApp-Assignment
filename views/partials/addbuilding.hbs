<form class="ui stacked segment form" action="/campus/{{campus.id}}/addBuilding" method="POST" enctype="multipart/form-data">
  <div class="three fields">
    <div class="field">
      <label for="name">Building Name</label>
      <input type="text" name="name" placeholder="Building Name" autofocus required>
    </div>
    <div class="field">
      <label for="phone">Phone Number</label>
      <input type="text" name="phone" placeholder="Phone" autofocus required>
    </div>
    <div class="field">
      <label>Image</label>
      <input placeholder="Image" type="file" name="picture" required>
    </div>
  </div>
  <button class="ui blue submit button">Add Building</button>
</form>